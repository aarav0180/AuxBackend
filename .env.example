# VibeSync Environment Configuration
# Copy this file to .env and update with your settings

# Application
APP_NAME=VibeSync
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# External API
JIOSAAVN_API_BASE_URL=https://jiosavan-api-with-playlist.vercel.app
EXTERNAL_API_TIMEOUT=10.0

# CORS (comma-separated for multiple origins)
CORS_ORIGINS=["*"]

# Room Settings
ROOM_CODE_LENGTH=6
MAX_QUEUE_SIZE=100
DEFAULT_ROOM_CODE=DEFAULT
DEFAULT_ROOM_HOST_ID=system
DEFAULT_ROOM_HOST_NAME=VibeSync Radio

# Security - Encryption
# IMPORTANT: Generate a secure random 32-byte key for production
# You can generate one with: python -c "import secrets; print(secrets.token_urlsafe(32)[:32])"
ENCRYPTION_KEY=VibeSync2025SecureKey1234567890X
